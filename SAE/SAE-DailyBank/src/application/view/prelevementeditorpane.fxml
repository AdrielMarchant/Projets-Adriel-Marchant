<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>


<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.view.PrelevementEditorpaneController">
   <center>
      <GridPane BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="NEVER" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="30.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label alignment="CENTER_RIGHT" maxWidth="1.7976931348623157E308" text="id prélèvement" GridPane.hgrow="SOMETIMES">
               <padding>
                  <Insets right="20.0" />
               </padding>
            </Label>
            <Label alignment="CENTER_RIGHT" maxWidth="1.7976931348623157E308" text="Montant" GridPane.hgrow="NEVER" GridPane.rowIndex="1">
               <padding>
                  <Insets right="20.0" />
               </padding>
            </Label>
            <Label alignment="CENTER_RIGHT" maxWidth="1.7976931348623157E308" text="Date Recurrente" GridPane.hgrow="NEVER" GridPane.rowIndex="2">
               <padding>
                  <Insets right="20.0" />
               </padding>
            </Label>
            <Label alignment="CENTER_RIGHT" maxWidth="1.7976931348623157E308" text="Beneficiaire" GridPane.hgrow="NEVER" GridPane.rowIndex="3">
               <padding>
                  <Insets right="20.0" />
               </padding>
            </Label>
            <TextField fx:id="txtIdPrelevement" disable="true" GridPane.columnIndex="1">
               <GridPane.margin>
                  <Insets right="20.0" />
               </GridPane.margin>
            </TextField>
            <TextField fx:id="txtMontant" GridPane.columnIndex="1" GridPane.rowIndex="1">
               <GridPane.margin>
                  <Insets right="20.0" />
               </GridPane.margin>
            </TextField>
            <TextField fx:id="txtDateRecurrente" GridPane.columnIndex="1" GridPane.rowIndex="2">
               <GridPane.margin>
                  <Insets right="20.0" />
               </GridPane.margin>
            </TextField>
            <TextField fx:id="txtBeneficiaire" GridPane.columnIndex="1" GridPane.rowIndex="3">
               <GridPane.margin>
                  <Insets right="20.0" />
               </GridPane.margin>
            </TextField>
         </children>
      </GridPane>
   </center>
   <bottom>
      <ButtonBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <buttons>
          <Button fx:id="btnValider" mnemonicParsing="false" onAction="#doValider" text="Valider" />
            <Button fx:id="btnAnnuler" mnemonicParsing="false" onAction="#doCancel" text="Annuler" />
        </buttons>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets right="20.0" />
         </padding>
      </ButtonBar>
   </bottom>
</BorderPane>
